{
  "name": "npc-finder",
  "private": true,
  "version": "1.1.0",
  "description": "Your personal dashboard for entertainment, music, games, tasks, and memories. Track, organize, and curate your life with flexible board-based task management.",
  "author": "Afton Gauntlett",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "kill:tests": "pkill -f 'vitest' || true",
    "prepare": "husky",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=moderate && npm run lint && npm run test -- --run",
    "admin:configure": "node scripts/configure-super-admin.js",
    "// DATABASE": "── Dev Database ──────────────────────────────────────────────────────",
    "// db:link": "Link: npx supabase link --project-ref <PROJECT_REF> --password <PASSWORD>",
    "// db:note": "All commands use linked project (no DATABASE_URL needed)",
    "db:push": "npx supabase db push",
    "db:pull": "npx supabase db pull",
    "db:diff": "npx supabase db diff --linked",
    "db:migration:list": "npx supabase migration list",
    "db:migration:new": "npx supabase migration new"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@phosphor-icons/react": "^2.1.10",
    "@sentry/react": "^8.0.0",
    "@supabase/supabase-js": "^2.75.0",
    "@tanstack/react-query": "^5.90.5",
    "@types/react-datepicker": "^6.2.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.0",
    "dotenv": "^17.2.3",
    "focus-trap-react": "^11.0.4",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "metascraper": "^5.49.5",
    "metascraper-author": "^5.49.5",
    "metascraper-date": "^5.49.5",
    "metascraper-description": "^5.49.5",
    "metascraper-image": "^5.49.5",
    "metascraper-title": "^5.49.5",
    "metascraper-url": "^5.49.5",
    "react": "^19.1.1",
    "react-colorful": "^5.6.1",
    "react-datepicker": "^8.9.0",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.2.1",
    "remark-gfm": "^4.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.8.28",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "supabase": "^2.51.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored"
    ]
  }
}
